# Polymarket Bot Configuration
# Copy this file to .env and fill in the values

# =============================================================================
# WALLET CONFIGURATION (REQUIRED)
# =============================================================================

# Your Polygon wallet private key (NEVER commit this!)
# Export from MetaMask or generate a new wallet
POLYGON_PRIVATE_KEY=

# Your Polymarket proxy wallet address (from your Polymarket account)
# Find this in your Polymarket account settings
POLYMARKET_PROXY_WALLET=

# Signature type:
# 0 = EOA (direct private key, e.g., MetaMask export)
# 1 = Email/Magic wallet (recommended if using Polymarket's email login)
# 2 = Browser wallet
POLYMARKET_SIGNATURE_TYPE=1

# =============================================================================
# API CREDENTIALS (Generate using scripts/generate_api_keys.py)
# =============================================================================

# These are generated from your private key - run the script first
POLYMARKET_API_KEY=
POLYMARKET_API_SECRET=
POLYMARKET_API_PASSPHRASE=

# =============================================================================
# NETWORK CONFIGURATION
# =============================================================================

# Polygon RPC URL (use a reliable provider)
POLYGON_RPC_URL=https://polygon-rpc.com

# Polymarket API URLs
CLOB_HTTP_URL=https://clob.polymarket.com/
CLOB_WS_URL=wss://ws-subscriptions-clob.polymarket.com/ws
GAMMA_API_URL=https://gamma-api.polymarket.com

# =============================================================================
# GABAGOOL STRATEGY CONFIGURATION
# =============================================================================

# Enable/disable the Gabagool arbitrage strategy
GABAGOOL_ENABLED=true

# Start in dry-run mode (no real trades, just logging)
GABAGOOL_DRY_RUN=true

# Markets to trade (comma-separated)
GABAGOOL_MARKETS=BTC,ETH

# Minimum spread to trade (in dollars, e.g., 0.02 = 2 cents)
GABAGOOL_MIN_SPREAD=0.02

# =============================================================================
# POSITION SIZING (for $100 starting capital)
# =============================================================================

# Minimum USD per single order leg (skip smaller trades)
# Gabagool22 uses $3-8 per trade; smaller sizes get better fills
GABAGOOL_MIN_TRADE_SIZE=3.0

# Maximum USD per single order
GABAGOOL_MAX_TRADE_SIZE=5.0

# Maximum USD per 15-minute window
GABAGOOL_MAX_PER_WINDOW=10.0

# Maximum daily exposure (leave reserve)
GABAGOOL_MAX_DAILY_EXPOSURE=90.0

# =============================================================================
# RISK LIMITS
# =============================================================================

# Maximum daily loss before stopping
GABAGOOL_MAX_DAILY_LOSS=5.0

# Maximum unhedged exposure (triggers immediate hedge)
GABAGOOL_MAX_UNHEDGED=10.0

# Maximum slippage in cents
GABAGOOL_MAX_SLIPPAGE=2.0

# =============================================================================
# COPY TRADING CONFIGURATION (if using copy trading strategy)
# =============================================================================

# Target wallet address to copy trades from
# TARGET_WALLET_ADDRESS=

# How often to check target positions (seconds)
# POLL_INTERVAL_SECONDS=4

# Size multiplier (1.0 = same size as target)
# COPY_SIZE_MULTIPLIER=1.0

# =============================================================================
# VPN CONFIGURATION (for geo-routing)
# =============================================================================

# VPN provider (mullvad, nordvpn, expressvpn, etc.)
# VPN_SERVICE_PROVIDER=mullvad

# WireGuard configuration
# VPN_PRIVATE_KEY=
# VPN_ADDRESS=
# VPN_SERVER_COUNTRIES=Netherlands

# =============================================================================
# LOGGING
# =============================================================================

# Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Enable JSON structured logging
LOG_JSON=false
