# Mercury Production Environment Configuration
# Copy this file to .env and fill in your credentials
#
# IMPORTANT: Never commit .env files with real credentials!

# ===================================
# Polymarket API Credentials (REQUIRED)
# ===================================
# Your Polymarket wallet private key (without 0x prefix)
MERCURY_POLYMARKET_PRIVATE_KEY=

# API credentials from Polymarket CLOB
MERCURY_POLYMARKET_API_KEY=
MERCURY_POLYMARKET_API_SECRET=
MERCURY_POLYMARKET_API_PASSPHRASE=

# ===================================
# Polygon RPC (OPTIONAL)
# ===================================
# Only needed for direct on-chain operations
MERCURY_POLYGON_PRIVATE_KEY=

# ===================================
# Application Settings
# ===================================
# Version tag for mercury image (default: latest)
MERCURY_VERSION=latest

# Dry run mode - set to true to disable actual trades
MERCURY_DRY_RUN=false

# Log level: DEBUG, INFO, WARNING, ERROR
MERCURY_LOG_LEVEL=INFO

# ===================================
# Grafana Settings
# ===================================
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=changeme

# ===================================
# Traefik Basic Auth
# ===================================
# Generate with: htpasswd -nb username password | sed -e 's/\$/\$\$/g'
# Default: admin:admin
MERCURY_BASIC_AUTH=admin:$$apr1$$yE.A6vVX$$p7.fpGKw5Unp0UW6H/2c.0
